# ================================
# Project - Environment Configuration
# ================================
# Rename this file to .env and configure

# Django Settings
SECRET_KEY=your-super-secret-key-change-me-use-long-random-string
DEBUG=False

# Allowed hosts (comma separated)
ALLOWED_HOSTS=your.domain.com,localhost,127.0.0.1

# CSRF trusted origins (include protocol, comma separated)
CSRF_TRUSTED_ORIGINS=https://your.domain.com

# ================================
# PostgreSQL Database
# ================================
POSTGRES_DB=your_db_name
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your-db-password

# ================================
# Admin User (auto-created on first run)
# ================================
ADMIN_USER=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-admin-password

# ================================
# Application Port (reverse proxy will point to this)
# ================================
APP_PORT=8080
